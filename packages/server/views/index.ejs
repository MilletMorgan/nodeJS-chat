<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Chat socket.io</title>
    <link rel="stylesheet" href="../style.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>
<body>
    <h1>Index</h1>

    <%= data %>

    <div id="app">
        <template v-if="loginType === 'username'">
            <label>Nom d'utilisateur</label>
            <input placeholder="Entrez votre nom d'utilisateur" key="username-input">
        </template>
        <template v-else>
            <div class="row">
                <div class="col-md-6">
                    <h1>Chat</h1>
                    <form @submit.prevent="submitMessage">
                        <input type="text" placeholder="Votre message..." size="50" autofocus :v-model="currentMessage" />
                        <input type="submit" value="Envoyer" />
                        <p v-if="currentMessage">{{ pseudo }} is typing ...</p>
                    </form>


                    <section>
                        <p v-for="message in messages"> {{ message.pseudo }} : {{message.content }} </p>
                    </section>
                </div>
                <div class="col-md-6">

                </div>
            </div>
        </template>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/vue"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script>
        new Vue({
            el: '#app',
            data: {
                messages: [],
                currentMessage: '',
                pseudo: '',
                socket: null,
            },
            mounted() {
                this.socket = io.connect('http://localhost:3000');
                this.pseudo = prompt("Quel est votre pseudo ?");
                this.socket.emit('new', this.pseudo);

                this.socket.on('message', function({ pseudo, message }) {
                    this.addMessage({pseudo, content: message});
                });

                this.socket.on('new', function(pseudo) {
                    this.addMessage({ pseudo, content: ' a rejoint le chat!' });
                });

            },
            methods: {
                submitMessage() {
                    //socket.emit('message', this.currentMessage);
                    this.addMessage({ pseudo: this.pseudo, message: this.currentMessage });
                    this.currentMessage = ''
                },
                addMessage(message) {
                    this.messages = [...this.messages, message];
                }
            }
        });
